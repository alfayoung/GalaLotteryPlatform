# SPEIT Lottery - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ============================================
# Backend Configuration
# ============================================

# Server Configuration
SERVER_PORT=7500

# SSL Configuration (Optional - for HTTPS)
# Set SSL_ENABLED=true to enable HTTPS
SSL_ENABLED=false
SSL_KEY_STORE=classpath:your-domain.jks
SSL_KEY_PASSWORD=your-keystore-password

# SJTU JAccount OAuth2 Configuration
# Register your application at: https://jaccount.sjtu.edu.cn/oauth2/
OAUTH_CLIENT_ID=your-client-id-here
OAUTH_CLIENT_SECRET=your-client-secret-here

# Admin Panel Authentication
ADMIN_PASSWORD=your-secure-admin-password

# Database Configuration
DB_URL=jdbc:mysql://localhost:3306/lottery?serverTimezone=UTC&useUnicode=true&characterEncoding=utf-8&useSSL=true
DB_USERNAME=root
DB_PASSWORD=your-database-password

# ============================================
# Frontend Configuration
# ============================================

# API Base URL (without protocol)
# For development: localhost:7500
# For production: your-domain.com:7500
VITE_API_BASE_URL=localhost:7500
